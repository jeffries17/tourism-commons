{
  "functions": {
    "source": "digital_assessment/functions"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|json)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": {
          "functionId": "api",
          "region": "us-central1"
        }
      },
      {
        "source": "/benin-sentiment",
        "destination": "/gambia-itc/index.html"
      },
      {
        "source": "/gambia-itc/**",
        "destination": "/gambia-itc/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
      "cleanUrls": true,
      "trailingSlash": false
  }
}
